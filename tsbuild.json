{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "jsx": "react",
    "target": "es5",
    "strictNullChecks": true,
    "baseUrl": "./src/",
    "types": ["node", "mocha", "chai"],
    "paths": {
      "react-year-month-selector": ["index.tsx"],
      "react-year-month-selector/dist/react-datepicker.css": ["styles/index.css"]
    }
  },
  "exclude": [
    "spec/**/*",
    "node_modules",
    "dist/**/*",
    "tmp",
    "index.ts"
  ],
  "compileOnSave": false
}
